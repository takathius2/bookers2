<main>
    <h1>Book detail</h1>
        <%= profile_image @book.get_image %><br><%= @book.user.name %>
            <%= link_to @book.title, book_path(@book.id) %>
        <%= @book.body %>
            <%= link_to "Edit", edit_book_path(@book.id) %>
        <% if @book.user == current_user %>
            <%= link_to "Destroy", books_path(@book), method: :delete %>
        <% end %>
</main>