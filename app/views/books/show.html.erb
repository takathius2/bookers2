<main>
    <div>
        <%= render 'users/user', user: @user, book: @book_new %>
    <h1>Book detail</h1>
        <%= link_to image_tag @book.user.get_profile_image(100,100) %><br><%= link_to @book.user.name, user_path(@user.id) %>
        <%= link_to @book.title, books_path(@book.id) %>
        <%= @book.body %>
        <% if @book.user == current_user %>
            <%= link_to @book.title, book_path(@book.id) %>
            <%= link_to "Edit", edit_book_path(@book.id) %>
            <%= link_to "Destroy", book_path(@book.id), method: :delete %>
        <% end %>
    </div>
</main>