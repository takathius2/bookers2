<div class="container">
    <div class="row">
        <div class="col-md-3">
            <%= render 'users/user', user: @user, book: @book_new %>
        </div>
        <div class="col-md-8 offset-md-1">
            <h2>Book detail</h2>
            <table>
                <tbody>
                    <tr>
                        <td>
                            <%= link_to image_tag @book.user.get_profile_image(100,100) %><br>
                            <%= link_to @book.user.name, user_path(@user.id) %> 
                        </td>
                        <td>
                            <%= link_to @book.title, book_path(@book.id) %>
                        </td>
                        <td>
                            <%= @book.body %>
                        </td>
                        <% if @book.user == current_user %>
                            <td>
                                <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success btn-sm edit" %>
                            </td>
                            <td>
                                <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？", 
                                class: "btn btn-sm btn-danger destroy_book_path" %>
                                <% end %>
                            </td>
                        </ta>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>