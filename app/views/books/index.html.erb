<h1>Books</h1>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    
    <tbody>
        <% @books.each do |book| %>
            <tr>
                <td>
                <% if book.profile_image.attached? %>
                    <%= image_tag user.profile_image, size: "100x100" %>
                <% else %>
                    <%= image_tag 'no_image', size: "100x100" %>
                <% end %></td>
                <td><%=link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
            </tr>
        <% end %>
    </tbody>
</table>