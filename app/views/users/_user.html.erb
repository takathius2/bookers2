<h2>User info</h2>
    <%= image_tag user.get_profile_image(100,100) %><br>
        <table class="table">
            <tbody>
                <tr></tr>
                <tr>
                    <th>name</th>
                    <th><%= user.name %></th>
                </tr>
                <tr>
                    <th>introduction</th>
                    <th><%= user.introduction %></th>
                </tr>
            </tbody>
        </table>
                    
    <div class="row">
        <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>  
        <% end %>
    </div>
    
<h2 class="mt-3">New book</h2>
        <form action="/books" accept-charaset="UTF-8" method="post">
            <div>
                <%= form_with model: book do |f| %>
                    <div clas="form-group">
                        <label for="book_title">Title</label><br>
                            <%= f.text_field :title %>
                    </div>
                    <p>Opinion</p><%= f.text_area :body %><br>
                    <%= f.submit 'Create Book', class: "btn btn-success btn-sm create_book" %>
                <% end %>
            </div>
        </form>